$ORIGIN <%= @internal_zone %>.
$TTL    3600
@	IN	SOA	ns-01.<%= @internal_zone %>.    root.<%= @internal_zone %>. (
                     2017032201         ; Serial
                           3600         ; Refresh
                           1800         ; Retry
                         604800         ; Expire
                          43200 )       ; Negative Cache TTL

        IN      NS      ns-01.<%= @internal_zone %>.
        IN      NS      ns-02.<%= @internal_zone %>.


ns-01	  	  IN	  A		<%= @ns1_public_addr %>
ns-02	  	  IN	  A		<%= @ns2_public_addr %>

dns-master	  IN      CNAME		ns-01.<%= @internal_zone %>.
dns-slave	  IN      CNAME		ns-02.<%= @internal_zone %>.
