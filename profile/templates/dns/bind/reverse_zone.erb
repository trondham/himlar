; Reverse zone for <%= @cidr %>
$ORIGIN <%= @origin %>.
$TTL    3600
@  IN	SOA	ns.<%= @internal_zone %>.    root.<%= @internal_zone %>. (
                        2017092601         ; Serial
                              3600         ; Refresh
                              1800         ; Retry
                            604800         ; Expire
                            43200 )        ; Negative Cache TTL

; Name servers:
<% name_servers.each do |ns| -%>
      NS      <%= ns %>.
<% end -%>
