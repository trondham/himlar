; Reverse zone for <%= @cidr %>
$ORIGIN <%= @origin %>.
$TTL    3600
@  IN	SOA	<%= @ns_master %>.    <%= @hostmaster %>. (
                        2018021201         ; Serial
                              3600         ; Refresh
                              1800         ; Retry
                            604800         ; Expire
                            43200 )        ; Negative Cache TTL

; Name servers:
<% @ns_slaves.each do |ns| -%>
      NS      <%= ns %>.
<% end -%>
