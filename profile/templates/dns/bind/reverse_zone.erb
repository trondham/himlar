; Reverse zone for <%= @cidr %>
$ORIGIN <%= @origin %>.
$TTL    3600
@  IN	SOA	<%= @ns_master %>.    <%= @hostmaster %>. (
                        2022111400         ; Serial
                             14400         ; Refresh
                              3600         ; Retry
                            604800         ; Expire
                             3600 )        ; Negative Cache TTL

; Name servers:
      NS      <%= @ns_master %>.
<% @ns_slaves.each do |ns| -%>
      NS      <%= ns %>.
<% end -%>
