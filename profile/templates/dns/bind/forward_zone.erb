; Forward zone for <%= @zone %>
$ORIGIN <%= @zone %>.
$TTL    3600
@  IN	SOA	<%= @master %>.    <%= @mail %>. (
                        2018021201         ; Serial
                              3600         ; Refresh
                              1800         ; Retry
                            604800         ; Expire
                            43200 )        ; Negative Cache TTL

        IN      NS      foo.
<% @slaves.each do |ns, values| -%>
        IN      NS      <%= ns %>.
<% end -%>
