; Forward zone for <%= @zone %>
$ORIGIN <%= @zone %>.
$TTL    3600
@  IN	SOA	<%= @ns_master %>.    <%= @hostmaster %>. (
                        2018021201         ; Serial
                             14400         ; Refresh
                              3600         ; Retry
                            604800         ; Expire
                            43200 )        ; Negative Cache TTL

; Name servers:
        IN      NS      <%= @ns_master %>.
<% @ns_slaves.each do |slave| -%>
        IN      NS      <%= slave %>.
<% end -%>


<% unless @delegations.empty? -%>
;
; Glue records:
<% @delegations.each do |subdomain,nslist| -%>
<% nslist.each do |ns| -%>
<%= subdomain %>   NS   <%= ns %>.
<% end -%>
<% end -%>
<% end -%>

<% unless @mx_records.empty? -%>
;
; Mail exchangers:
<% @mx_records.each do |mx,values| -%>
        <%= values["ttl"] %>     MX     <%= values["priority"] %> <%= mx %>.
<% end -%>
<% end -%>

;
; Domain data:
<% unless @ns_a_records.empty? -%>
<% @ns_a_records.each do |nsname,ip| -%>
<%= nsname %>      IN      A             <%= ip %>
<% end -%>
<% end -%>
<% unless @ns_aaaa_records.empty? -%>
<% @ns_aaaa_records.each do |nsname,ip| -%>
<%= nsname %>      IN      AAAA          <%= ip %>
<% end -%>
<% end -%>
