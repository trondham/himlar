; Forward zone for <%= @zone %>
$ORIGIN <%= @zone %>.
$TTL    3600
@  IN	SOA	<%= @ns_master %>.    <%= @mail %>. (
                        2018021201         ; Serial
                              3600         ; Refresh
                              1800         ; Retry
                            604800         ; Expire
                            43200 )        ; Negative Cache TTL

        IN      NS      <%= @ns_master %>.
<% @ns_slaves.each do |ns| -%>
        IN      NS      <%= ns %>.
<% end -%>
