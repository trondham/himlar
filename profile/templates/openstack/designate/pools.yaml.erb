---
- name: default
  description: Default Bind9 Pool
  attributes: {}
  nameservers:
<% @bind_servers.each do |ns_name,values| -%>
    - host: <%= values["ns_public_addr"] %>
      port: 53
<% end -%>
  ns_records:
<% @bind_servers.each do |ns_name,values| -%>
    - hostname: <%= values["ns_public_name"] %>.
      priority: 1
<% end -%>
  targets:
<% @bind_servers.each do |ns_name,values| -%>
    - type: bind9
      description: Bind9 Server <%= ns_name %>
      masters:
<% @mdns_transport_addr.each do |addr| -%>
        - host: <%= addr %>
          port: 5354
<% end -%>
      options:
        rndc_host: <%= values["ns_transport_addr"] %>
        rndc_port: 953
        rndc_config_file: /etc/rndc.conf
        rndc_key_file: /etc/rndc-mdns.key
        port: 53
        host: <%= values["ns_transport_addr"] %>
<% end -%>
  also_notifies: []
